        <Label Content="Number 1:" HorizontalAlignment="Left" Margin="250,100,0,0" VerticalAlignment="Top"/>
        <Label Content="Number 2:" HorizontalAlignment="Left" Margin="250,130,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbNumber1" HorizontalAlignment="Left" Margin="330,105,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbNumber2" HorizontalAlignment="Left" Margin="330,135,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnCalcular" Content="Calculate" Width="200" HorizontalAlignment="Left" Margin="250,170,0,0" VerticalAlignment="Top" Click="BtnCalcular_Click"/>
